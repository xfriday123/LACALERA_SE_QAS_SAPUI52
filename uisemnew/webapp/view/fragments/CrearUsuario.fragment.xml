        </content>
        <beginButton>
            <Button text="Guardar" type="Transparent" press="onFormUsuario"/>
        </beginButton>
        <endButton>
            <Button text="Cancelar" press="onCancelar('dialogCrearUsuario')"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>